@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<div class="container">
    <div class="card text-center">
        <div class="card-body">
            <h2>Client Details</h2>
            <hr />
            <h3>@Html.DisplayNameFor(model => model.ClientName): @Html.DisplayFor(model => model.ClientName)</h3>
            <h3>@Html.DisplayNameFor(model => model.Stylist): @Html.DisplayFor(model => model.Stylist.StylistName)</h3>

            <p>@Html.ActionLink("Edit Client", "Edit", new { id = Model.ClientId }, new { @class = "btn btn-primary" })</p>
            <p>@Html.ActionLink("Delete Client", "Delete", new { id = Model.ClientId }, new { @class = "btn btn-danger" })</p>
            <p>@Html.ActionLink("Back to list", "Index")</p>
        </div>
    </div>
</div>