@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;


<div class="container">
    <div class="card text-center">
        <div class="card-body">
            @if (Model.Count == 0)
            {
                <h2>Clients:</h2>
                <h3>No Clients have been added yet!</h3>
            }
            else
            {
                <h2>Clients:</h2>
                <div class="card">
                    <div class="card-body">
                        <ul>
                            @foreach (Client client in Model)
                            {
                                <li>@Html.ActionLink($"{client.ClientName}", "Details", new { id = client.ClientId }) | @client.Stylist.StylistName</li>
                            }
                        </ul>
                    </div>
                </div>
            }
            <br>
            <div class="card">
                <div class="card-body">
                  <div class="row">
                    <p>@Html.ActionLink("Add New client", "Create")</p>
                    <p>@Html.ActionLink("Return Home", "Index", "Home")</p>
                  </div>
                </div>
            </div>
        </div>
    </div>
</div>