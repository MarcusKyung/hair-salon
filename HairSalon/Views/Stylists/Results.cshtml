@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist
@using HairSalon.Models

<div class="container">
    <div class="card text-center">
        <div class="card-body">
            <h2>Search Results:</h2>
            <hr />
            <h3>@Html.DisplayNameFor(model => model.StylistName): @Html.DisplayFor(model => model.StylistName)</h3>
            <h3>Clients:</h3>
            <ul>
                @foreach (Client client in Model.Clients)
                {
                  <li>@Html.ActionLink($"{client.ClientName}", "Details", "Clients", new { id = client.ClientId })</li>
                }
            </ul>
            <p>@Html.ActionLink("Add new stylist", "Create")</p>
            <p>@Html.ActionLink("Add new client", "Create", "Clients")</p>
            <p>@Html.ActionLink("Home", "Index", "Home")</p>
        </div>
    </div>
</div>