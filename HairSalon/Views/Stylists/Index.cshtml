@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<div class="container">
    <div class="card text-center">
        <div class="card-body">
            @if (Model.Count == 0)
            {
                <h2>Stylists</h2>
                <h3>No stylists have been added yet!</h3>
            }
            else
            {
                <h2>Stylists</h2>
                <div class="card">
                    <div class="card-body">
                        <ul>
                            @foreach (Stylist stylist in Model)
                            {
                                <li>@Html.ActionLink($"{stylist.StylistName}", "Details", new { id = stylist.StylistId })</li>
                            }
                        </ul>
                    </div>
                </div>
            }
            <br>
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p>@Html.ActionLink("Add New Stylist", "Create")</p>
                            <p>@Html.ActionLink("Return Home", "Index", "Home")</p>
                        </div>
                        <div class="col-md-6">
                            <p>@Html.ActionLink("Add New Client", "Create", "Clients")</p>
                            <p>@Html.ActionLink("Search Stylists", "Search")</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>